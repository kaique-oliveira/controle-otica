<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="Kvision.Dominio.Entidades" assembly="Kvision.Dominio">

	<class name="Adicional" lazy="false" table="tbl_adicional" >

		<id name="Id" column="id" type="int">
			<generator class="increment" />
		</id>
		<property name="DataCadastro"		column="d_cadastro"			type="date" />
		
		<property name="Descricao"			column="descricao"			type="string" length="150" />
		<property name="Valor"				column="valor"				type="decimal" />
		
		<many-to-one name="Pedido"
					 class="Pedido"
					 column="id_pedido"
					 fetch="join"
					 foreign-key="tbl_adicional_id_pedido_fkey"/>
	</class>
</hibernate-mapping>
