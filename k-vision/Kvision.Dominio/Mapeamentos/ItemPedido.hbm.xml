<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="Kvision.Dominio.Entidades" assembly="Kvision.Dominio">

	<class name="ItemPedido" lazy="false" table="tbl_item_pedido" >

		<id name="Id" column="id" type="int">
			<generator class="increment" />
		</id>
		<property name="DataCadastro"		column="d_cadastro"			type="date" />

		<many-to-one name="Pedido"
				 class="Pedido"
				 column="id_pedido"
				 fetch="join"
				 foreign-key="tbl_item_pedido_id_pedido_fkey"/>
		
		<many-to-one name="Produto"
		 class="Produto"
		 column="id_produto"
		 fetch="join"
		 foreign-key="tbl_item_pedido_id_produto_fkey"/>

	</class>
</hibernate-mapping>

